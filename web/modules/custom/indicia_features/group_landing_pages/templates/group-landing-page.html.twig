{#
/**
 * @file
 * Default theme implementation for a group landing page.
 *
 * Available variables:
 * - $group_id: Group unique ID.
 * - $group_title: Title of the group.
 * - $group_description: Description given for the group.
 * - $group_type: name of the group type (e.g. Local project, Bioblitz).
 * - $implicit_record_inclusion: record inclusion mode for group report filters.
 * - $member - true if the current user is a member.
 */
#}
<div class="row">
  <div class="col-md-8">
    <p>{{ description }}</p>
  </div>
  <div class="col-md-4">
    {{ drupal_block('group_landing_pages_group_page_links', {
      group_id: group_id,
      implicit_record_inclusion: implicit_record_inclusion,
      member: member
    }) }}
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <h3>Recent records</h3>
    {{ drupal_block('es_recent_records_block', {unverified_records: true}) }}
  </div>
  <div class="col-md-6">
    {{ drupal_block('es_all_records_map_block', {unverified_records: true}) }}
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <h3>Top contributors</h3>
    {{ drupal_block('es_top_recorders_table_block', {unverified_records: true}) }}
  </div>
  <div class="col-md-6">
    <h3>Records by species group</h3>
    {{ drupal_block('es_records_by_taxon_group_pie_block', {unverified_records: true}) }}
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <h3>Records by time of year</h3>
    {{ drupal_block('es_phenology_graph_block', {unverified_records: true}) }}
  </div>
  <div class="col-md-6">
    <h3>Verification status</h3>
    {{ drupal_block('es_records_by_verification_status_pie_block', {unverified_records: true}) }}
  </div>
</div>
